<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.depart.DepartActivity">

            <TextView
                android:id="@+id/depart_title_main"
                style="@style/PretendardBold32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소속 학과를 선택하면,"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toTopOf="@id/depart_title_sub"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/depart_title_sub"
                style="@style/PretendardBold24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해당 학과의 공지만 바로 알려줘요."
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintBottom_toTopOf="@id/onboarding_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/depart_title_main"/>

        <LinearLayout
            android:id="@+id/onboarding_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="56dp"
            app:layout_constraintBottom_toTopOf="@id/depart_search_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/depart_title_sub">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="top|center_vertical"
                    android:layout_marginTop="6dp"
                    android:background="@color/line" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="left|center_horizontal"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/blue300" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/gray300" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right|center_horizontal"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/gray300" />

            </FrameLayout>

            <TextView
                style="@style/PretendardBold16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="학과 선택"
                android:textColor="@color/main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/depart_search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_search_white__radius_10dp"
            android:minHeight="56dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/depart_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_progress">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/gray300" />

            <EditText
                android:id="@+id/depart_search_text"
                style="@style/PretendardRegular16"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/department_search_message"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <ImageButton
                android:id="@+id/depart_search_text_clear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close_black"
                app:tint="@color/gray300" />
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/depart_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="@id/depart_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/depart_search_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/depart_rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_depart" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/depart_next"
            style="@style/PretendardRegular20"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_gray_to_blue_10dp_enabled"
            android:text="다음"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/depart_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>

        <variable
            name="vm"
            type="com.dongyang.android.youdongknowme.ui.view.depart.DepartViewModel" />
    </data>

</layout>