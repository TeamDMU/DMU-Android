<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_alarm_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> itemClickListener.itemClick(alarm)}"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                bind_background="@{alarm.visited}"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/item_alarm_title"
                    style="@style/PretendardBold14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="@{alarm.title}"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item_alarm_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/item_alarm_department"
                    style="@style/PretendardBold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@{alarm.department}"
                    android:textColor="@color/main"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_alarm_title"
                    app:layout_constraintVertical_bias="0.25" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item_alarm_keyword"
                    app:layout_constraintStart_toEndOf="@id/item_alarm_department"
                    app:layout_constraintTop_toBottomOf="@id/item_alarm_title"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/item_alarm_keyword"
                    style="@style/PretendardBold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@{alarm.keyword}"
                    android:textColor="@color/main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_alarm_department"
                    app:layout_constraintTop_toBottomOf="@id/item_alarm_title"
                    app:layout_constraintVertical_bias="0.25" />

                <ImageView
                    android:id="@+id/item_alarm_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="alarm"
            type="com.dongyang.android.youdongknowme.data.local.entity.AlarmEntity" />

        <variable
            name="itemClickListener"
            type="com.dongyang.android.youdongknowme.ui.view.alarm.AlarmClickListener" />
    </data>
</layout>