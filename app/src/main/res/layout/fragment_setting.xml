<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/setting_toolbar"
            layout="@layout/standard_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{@string/setting_title}">
        </include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="@string/setting_dmu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/setting_notice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="@string/setting_notice"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingTop="12dp"
                    android:background="@color/line"/>

                <!--Text 지우고 선택한 학과가 나타나게 수정 필요 -->
                <TextView
                    android:id="@+id/setting_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/setting_sw"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/setting_switch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="@string/setting_notice"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/setting_department_choice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/department_title"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingTop="12dp"
                    android:background="@color/line"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/setting_app_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/setting_ask"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/setting_app_help"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/setting_app_version"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/setting_app_license"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/setting_app_license"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>